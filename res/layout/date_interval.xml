<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:orientation="vertical" >

<RelativeLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/from_date" />

    <ImageButton
        android:id="@+id/pickButton1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:onClick="showFromDatePicker"
        android:contentDescription="@string/calendar"
        android:src="@drawable/calendar" />

</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <EditText
        android:id="@+id/fromYearTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="number" 
        android:lines="1"
        android:maxLines="1" >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/fromSlash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fromYearTxt"
        android:text="@string/slash" 
        android:layout_centerVertical="true" />
    
    <EditText
        android:id="@+id/fromMonthTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fromSlash1"
        android:ems="4"
        android:inputType="number" 
        android:lines="1"
        android:maxLines="1" />

    <TextView
        android:id="@+id/fromSlash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fromMonthTxt"
        android:text="@string/slash" 
        android:layout_centerVertical="true" />
    
    <EditText
        android:id="@+id/fromDayTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fromSlash2"
        android:ems="4"
        android:inputType="number" 
        android:lines="1"
        android:maxLines="1" />
    
</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/bcFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/bc_label" />

</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/jcFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/jc_label" />

</RelativeLayout>   

<RelativeLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/to_date" />

    <ImageButton
        android:id="@+id/pickButton2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView2"
        android:onClick="showToDatePicker"
        android:contentDescription="@string/calendar"
        android:src="@drawable/calendar" />

</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <EditText
        android:id="@+id/toYearTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="number" 
        android:lines="1"
        android:maxLines="1" />
    
    <TextView
        android:id="@+id/toSlash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/toYearTxt"
        android:text="@string/slash" 
        android:layout_centerVertical="true" />
    
    <EditText
        android:id="@+id/toMonthTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/toSlash1"
        android:ems="4"
        android:inputType="number" 
        android:lines="1"
        android:maxLines="1" />

    <TextView
        android:id="@+id/toSlash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/toMonthTxt"
        android:text="@string/slash" 
        android:layout_centerVertical="true" />
    
    <EditText
        android:id="@+id/toDayTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/toSlash2"
        android:ems="4"
        android:inputType="number" 
        android:lines="1"
        android:maxLines="1" />
    
</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/bcTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/bc_label" />

</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/jcTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/jc_label" />

</RelativeLayout>   

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="subtract"
        android:text="@string/calculate" />

</RelativeLayout>

<RelativeLayout android:layout_width="fill_parent"
      android:layout_height="wrap_content">

    <EditText
        android:id="@+id/outText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/outText"
        android:text="@string/days"
        android:layout_centerVertical="true"
         />

</RelativeLayout>
  
</LinearLayout>